# Server Configuration
PORT=8001

# Session Configuration
SESSION_SECRET=your_super_secret_session_key_here

# Google Maps API Configuration
# Use a key that allows http://localhost referrers for local dev
GOOGLE_MAPS_API_KEY=

# Firebase Admin Configuration
# Option 1: Use explicit service account file path
# Example: ./jobmapper-1b4f2-firebase-adminsdk-fbsvc-4842fb74a8.json
FIREBASE_SERVICE_ACCOUNT_PATH=

# Option 2: Use env vars for service account
# IMPORTANT: Keep FIREBASE_PRIVATE_KEY quoted and use \n for newlines.
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_CONTENTS\n-----END PRIVATE KEY-----\n"

# Firestore is now the required backend
USE_FIRESTORE=true

# Legacy Postgres support has been removed; DATABASE_URL is optional and ignored
# DATABASE_URL=
